sed -r 's/(^\s*deb(-src)?\s+[^ ]+)(\s+trixie\s+|\s+trixie-security\s+|\s+trixie-updates\s+|\s+trixie-backports\s+).*$/\1\3 main contrib non-free-firmware non-free/g
/deb-src/s/^/#/' /etc/apt/sources.list  2> >( tee -a "$logfile" ) > sysfiles1/etc/apt/sources.list || giveup "There was a problem editing sources.list." 1
